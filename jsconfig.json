{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@modules/*": ["./src/modules/*"],
      "@views/*": ["./src/views/*"],
      "@api/*": ["./src/api/*"],
      "@context/*": ["./src/context/*"],
      "@utils/*": ["./src/utils/*"],
      "@src/*": ["./src/*"],
      "@hooks/*": ["./hooks/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".cache", "bundles", "out"],
  "include": [
    "build/**/*",
    "server/**/*",
    "e2e/**/*",
    "src/**/*",
    "stories/**/*"
  ]
}
